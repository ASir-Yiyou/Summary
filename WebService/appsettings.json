{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "RedisConfig": [
    {
      // 默认业务，连接本地 Redis DB 0
      "CacheName": "Default",
      "RedisConnection": "127.0.0.1:6379",
      "DefaultDB": 0,
      "IdleTimeout": 5000
    },
    {
      // 用户业务，复用同一个连接，但是存到 DB 1
      "CacheName": "User",
      "RedisConnection": "127.0.0.1:6379",
      "DefaultDB": 1,
      "IdleTimeout": 5000
    }
  ],
  "AllowedHosts": "*"
}
