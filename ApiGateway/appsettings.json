{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      // 步骤1：开启 Yarp 的详细日志以查看转发细节
      "Yarp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      // ---------------- Auth Service (保持不变) ----------------
      "auth-connect": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/connect/{**catch-all}" }
      },
      "auth-api-controller": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "auth-share-controller": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/share/{**catch-all}" }
      },
      "auth-weather-controller": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/weather/{**catch-all}" }
      },
      "auth-swagger-json": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth/swagger/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ]
      },
      "auth-order-tests": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/ordertests/{**catch-all}" }
      },

      "order-api-direct": {
        "ClusterId": "order-cluster",
        "Match": { "Path": "/api/orders/{**catch-all}" }
      },
      // 为了让 Swagger UI 能找到 order 的 swagger.json，建议添加这个专用路由
      "order-swagger-json": {
        "ClusterId": "order-cluster",
        "Match": { "Path": "/order/swagger/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/order" } ]
      },
      // 如果你确实需要通过 /order 访问某些非API页面，保留这个，但要注意下游是否匹配
      "order-prefix": {
        "ClusterId": "order-cluster",
        "Match": { "Path": "/order/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/order" } ]
      },

      "product-api-direct": {
        "ClusterId": "product-cluster",
        "Match": { "Path": "/api/products/{**catch-all}" }
      },
      // 添加 Product Swagger JSON 支持
      "product-swagger-json": {
        "ClusterId": "product-cluster",
        "Match": { "Path": "/product/swagger/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/product" } ]
      },
      "product-prefix": {
        "ClusterId": "product-cluster",
        "Match": { "Path": "/product/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/product" } ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": { "d1": { "Address": "https://auth" } },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:00:30"
          }
        }
      },
      "order-cluster": {
        "Destinations": { "d1": { "Address": "https://order" } },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:00:30"
          }
        }
      },
      "product-cluster": {
        "Destinations": { "d1": { "Address": "https://product" } },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:00:30"
          }
        }
      }
    }
  }
}