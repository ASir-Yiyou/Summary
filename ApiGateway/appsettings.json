{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      // 1. Auth Service
      "auth-connect": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/connect/{**catch-all}" }
      },
      "auth-api-controller": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "auth-share-controller": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/share/{**catch-all}" }
      },
      "auth-weather-controller": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/weather/{**catch-all}" }
      },
      "auth-swagger-json": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth/swagger/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ]
      },
      "auth-order-tests": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/ordertests/{**catch-all}" }
      },
      // 2. Order Service
      "order-api-direct": {
        "ClusterId": "order-cluster",
        "Match": { "Path": "/api/orders/{**catch-all}" }
      },
      "order-prefix": {
        "ClusterId": "order-cluster",
        "Match": { "Path": "/order/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/order" } ]
      },
      // 3. Product Service
      "product-api-direct": {
        "ClusterId": "product-cluster",
        "Match": { "Path": "/api/products/{**catch-all}" }
      },
      "product-prefix": {
        "ClusterId": "product-cluster",
        "Match": { "Path": "/product/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/product" } ]
      }
    },
    // 关键修改：集群配置 (改为服务发现名称)
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "d1": {
            // 原来: "https://localhost:7072"
            // 现在: 直接使用 AppHost 中的名称 "auth"
            "Address": "https://auth"
          }
        },
        "HealthCheck": {
          // 1. 主动检查 (每10秒问一次 /health)
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          // 2. 被动检查 (这里应该不会再报错了)
          "Passive": {
            "Enabled": true,
            // 只要遇到一次网络层面的失败(如连接被拒)，立刻标记为不健康
            "Policy": "TransportFailureRate",
            // 标记为不健康后，等待 30 秒再尝试重新连接它
            "ReactivationPeriod": "00:00:30"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "d1": {
            // 原来: "https://localhost:5001"
            // 现在: 直接使用 AppHost 中的名称 "order"
            "Address": "https://order"
          }
        },
        "HealthCheck": {
          // 1. 主动检查 (每10秒问一次 /health)
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          // 2. 被动检查 (这里应该不会再报错了)
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:00:30"
          }
        }
      },
      "product-cluster": {
        "Destinations": {
          "d1": {
            "Address": "https://product"
          }
        },
        "HealthCheck": {
          // 1. 主动检查 (每10秒问一次 /health)
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:00:30"
          }
        }
      }
    }
  }
}